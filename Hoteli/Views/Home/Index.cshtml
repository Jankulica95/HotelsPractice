@section Scripts {
    @Scripts.Render("~/Scripts/Skripta.js")
    @Scripts.Render("~/Scripts/Validator.js")
}

<div class="row" id="buttons">
    <div class="col-sm-9">
    </div>
    <div class="col-sm-3">
        <div class="btn-toolbar">
            <button type="button" style="background-color:yellow" id="registracijabtn" class="btn btn-default">Registracija</button>
            <button type="button" id="prijavabtn" class="btn btn-default">Prijava</button>
        </div>
    </div>
</div>

<div class="row ">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <form method="post" action="post/" id="registracija" style="display:none">
            <h3>Registracija</h3>
            <div class="row">
                <p>
                    <div class="col-sm-3"></div>
                    <label class="form-label col-sm-4">Email:</label>
                    <input type="text" class="col-sm-5" id="regEmail" />
                </p>
            </div>
            <div class="row">
                <p>
                    <div class="col-sm-3"></div>
                    <label class="form-label col-sm-4">Lozinka:</label>
                    <input type="password" class="col-sm-5" id="regLoz" />
                </p>
            </div>
            <div class="row">
                <p>
                    <div class="col-sm-3"></div>
                    <label class="form-label col-sm-4">Potvrdi lozinku:</label>
                    <input type="password" class="col-sm-5" id="regLoz2" />
                </p>
            </div>
            <div class="row">
                <div class="col-sm-3"></div>
                <button type="submit" id="odustajanje" class="btn btn-default col-sm-4">Odustajanje</button>
                <div class="col-sm-1"></div>
                <button type="submit" class="btn btn-default col-sm-4">Registracija</button>
            </div>

            <div id="uspesnoRegistrovanje" style="display:none">
                <p>Uspesna registracija na sistem</p>
                <button type="button" id="prijavaNaSistem" class="btn btn-default">Prijava na sistem</button>
            </div>
        </form>
    </div>
    <div class="col-sm-3"></div>
</div>
<div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
        <form method="post" action="post/" id="prijava" style="display:none">
            <h3>Prijava</h3>
            <div class="row">
                <p>
                    <div class="col-sm-3"></div>
                    <label class="col-sm-3 form-label">Email:</label>
                    <input class="col-sm-6" type="text" id="priEmail" />
                </p>
            </div>
            <div class="row">
                <p>
                    <div class="col-sm-3"></div>
                    <label class="col-sm-3 form-label">Lozinka:</label>
                    <input class="col-sm-6" type="password" id="priLoz" />
                </p>
            </div>
            <div class="row">
                <div class="col-sm-3"></div>
                <button type="submit" id="odustajanje" class="btn btn-default col-sm-4">Odustajanje</button>
                <div class="col-sm-1"></div>
                <button type="submit" class="btn btn-default col-sm-4">Prijava</button>
            </div>
        </form>
    </div>
    <div class="col-sm-4"></div>
</div>


<br />

<div class="row" id="odjava" style="display:none">
    <p id="info" class="col-sm-6"></p>
    <div class="col-sm-6">
        <div class="col-sm-6"></div>
        <button class="btn btn-default col-sm-6" style="background-color:yellow" id="odjavise">Odjava</button>
    </div>

</div>

<br />
<br />

<div class="row mt-50" id="filteritradicija" style="display:none">
    <div class="col-sm-6">
        <form method="post" action="post/" id="filterForm">
            <h3>Pretraga po kapacitetu:</h3>
            <p>
                <label class="form-label">Najmanje soba</label>
                <input type="text" id="minSoba" />
            </p>
            <p>
                <label class="form-label">Najvise soba</label>
                <input type="text" id="maxSoba" />
            </p>
            <button type="submit" class="btn btn-default">Pretraga</button>
        </form>
    </div>
    <div class="col-sm-6">
        <p>Hotelski lanci sa najduzom tradicijom</p>
        <button class="btn btn-default" id="tradicijabtn">Ucitavanje</button>
        <p id="tradicijaResult"></p>
    </div>
</div>

<div class="row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-8" id="dataHoteli">
    </div>
    <div class="col-sm-2">
    </div>
</div>


<div class="row">
    <div class="col-sm-3">
    </div>
    <div id="formDivHotel" class="col-sm-6" style="display:none;">
        <h4>Dodavanje novog hotela</h4>


        <form method="post" action="post/" id="hotelForm">
            <div class="row">
                <p>
                    <div class="col-sm-3"></div>
                    <label class="col-sm-6 form-label">Lanac hotela: </label>
                    <select class="col-sm-3" id="hotelLanacHotela"> </select>

                </p>
            </div>

            <div class="row">

                <p>
                    <div class="col-sm-3"></div>
                    <label class="col-sm-6 form-label"> Naziv: </label>
                    <input class="col-sm-3" id="hotelNaziv">

                </p>

            </div>

            <div class="row">
                <div class="col-sm-8"></div>
                <label class="col-sm-4 text-danger" id="hotelNazivGreska"></label>
            </div>

            <div class="row">
                <p>
                    <div class="col-sm-3"></div>
                    <label class="col-sm-6 form-label">Godina otvaranja:</label>
                    <input class="col-sm-3" id="hotelGodinaOsnivanja">
                </p>
                <p class="text-danger" id="hotelGodinaOsnivanjaGreska"></p>
            </div>
            <div class="row">
                <p>
                    <div class="col-sm-3"></div>
                    <label class="col-sm-6 form-label">Broj soba:</label>
                    <input class="col-sm-3" id="hotelBrojSoba">
                </p>
                <p class="text-danger" id="hotelBrojSobaGreska"></p>
            </div>
            <div class="row">
                <p>
                    <div class="col-sm-3"></div>
                    <label class="col-sm-6 form-label">Broj zaposlenih:</label>
                    <input class="col-sm-3" id="hotelBrojZaposlenih">
                </p>
                <p class="text-danger" id="hotelBrojZaposlenihGreska"></p>
            </div>

            <br />
            <div class="row">
                <div class="col-sm-3"></div>
                <button type="submit" class="btn btn-default col-sm-4">Dodavanje</button>
                <div class="col-sm-1"></div>
                <p><button type="button" class="btn btn-default col-sm-4" style="background-color:yellow" id="formClear">Odustajanje</button></p>
            </div>
        </form>
    </div>
    <div class="col-sm-3">
    </div>
</div>

<hr />



